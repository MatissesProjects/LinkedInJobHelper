{
  "manifest_version": 3,
  "name": "LinkedInJobHelper",
  "version": "0.1.0",
  "description": "Filters LinkedIn job postings to identify high-quality opportunities.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:11434/*",
    "https://html.duckduckgo.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["scripts/content.js"]
    }
  ]
}
